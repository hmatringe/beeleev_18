<div id="signup_18" class="below-nav">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <h1>JOIN THE COMMUNITY</h1>
      </div>
    
      <div class="col-xs-12 col-sm-4 col-sm-push-8">
        
        <div class="sign-up-body">

          <%= link_to user_omniauth_authorize_path(:linkedin), class: "btn btn-primary btn-block" do %> 
            <%= t("sign_up_with") %>
            <%= image_tag "LinkedIn-Logo-2C.png", size: "83x20" %>
          <% end %>

          <hr>

          <div class="js_slider_wrap">
            <div class="js_slider_frame">
            <%= form_for resource, as: resource_name, url: user_registration_path(resource) do |f| %>
              <div class="js_slider_card one">
                <%= render partial: 'sign_up_section_1', locals: {f: f}%>
              </div>
              <div class="js_slider_card two">
                <%= render partial: 'sign_up_section_2', locals: {f: f} %>
              </div>
              <div class="js_slider_card three">
                <%= render partial: 'sign_up_section_3', locals: {f: f} %>
              </div>
              <% end %>
            </div>
              <div class="js_slider_nav">
                <div id="js-slider-btn-left" class="js_slider_button">
                  <div class="js_slider_navicon">
                    <i class="fa fa-chevron-left" aria-hidden="true"></i>
                  </div>
                </div>
                <div id="js-slider-btn-right" class="js_slider_button">
                  <div class="js_slider_navicon">
                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                  </div>
                </div>
              </div>

          </div>
        </div>
        <!-- <div class="sign-up-footer"> -->
          <div class="text-center">
            Already a member ?
            <%= link_to t("log_in"), new_user_session_path, data: {toggle: "reopen-modal"} %> 
          </div>
          <br><br>
        <!-- </div> -->
      </div>

      <div class="col-xs-12 col-sm-8 col-sm-pull-4">
        <div class="sign-up-left">
          <div>
            <div>
              <h2>To Grow your Business Internationally is a Challengeâ€¨</h2>
            </div>
            <div class="bullets">
              <h3>Get Support</h3>
              <div class="middle-dash">&nbsp;-&nbsp;</div>
              <h3>Find Contacts</h3>
              <div class="middle-dash">&nbsp;-&nbsp;</div>
              <h3>Meet in Real Life</h3>
            </div>
          </div>

          <%= render partial: "users/shared/world" %>
          <%= render partial: "users/shared/kpis" %>

        </div>
      </div>  

    </div>
  </div>
</div>



<%= content_for :javascripts do %> 
  <%= render "shared/linkedin" %>

  <script>
    $(function() {
      $('#user_country').select2({
        minimumInputLength: 3});
      $('#user_expertises').select2();
      $('#user_business_sectors').select2();
     });
  </script>
<% end %>