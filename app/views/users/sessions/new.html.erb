<div id="signin_18" class="below-nav">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <h1>JOIN THE COMMUNITY</h1>
      </div>
        
      <div class="col-xs-12 col-sm-4 col-sm-push-8">
        <div class="col-xs-10 col-xs-offset-1">
          <div class="text-center">
            <%= link_to user_omniauth_authorize_path(:linkedin), class: "btn btn-primary btn-block linkedin-btn" do %>
              <%=  t("log_in_with") %>
              <%= image_tag "LinkedIn-Logo-2C.png", size: "83x20" %>
            <% end %>
          </div>

          <hr>

          <section id="log_in_with_email">
            <%= form_for(resource_name, :url => session_path(resource_name)) do |f| %>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon">@</span>
                  <%= f.text_field :email, class: "form-control",
                    placeholder: :email.to_s.humanize,
                    required: true  %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-lock"></span>
              </span>
                  <%= f.password_field :password, class: "form-control",
                    placeholder: :password.to_s.humanize,
                    required: true %>
                </div>
              </div>

              <%  if devise_mapping.rememberable?  %>
                <div class="checkbox">
                  <label>
                    <%=  f.check_box :remember_me %>
                    <%=  f.label :remember_me %>
                  </label>
                </div>
              <% end %>
              
              <!--<div class="checkbox">
                <label>
                  <%#= check_box(resource, :terms_of_service) %>
                  <label for="client_terms_of_service">I accept Beeleev General Terms & Conditions.</label>
                </label>
              </div> -->
                
              <%=  f.submit t('log_in'), class: "btn btn-block btn-orange18-orange"  %>
            <% end %>
            
            <%  if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(:user) %>
              <br>
              <br>
            <% end %>
            <hr>
          </section>
          <div class="text-center">
            <span>Not a Beeleever yet?</span>
            <%= link_to t("Apply Now"), new_user_registration_path, class: "btn secundary-cta" %>
            <br>
            <br>
            <h5 class="hidden-xs">Grow Global
                <br><span>WITH US!</span>
            </h5>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-sm-8 col-sm-pull-4">
        <div class="sign-in-left">
          <h2>To Grow your Business Internationally is a Challengeâ€¨</h2>
          <div class="bullets">
            <h3>Get Support</h3>
            <div class="middle-dash">&nbsp;-&nbsp;</div>
            <h3>Find Contacts</h3>
            <div class="middle-dash">&nbsp;-&nbsp;</div>
            <h3>Meet in Real Life</h3>
          </div>

          <%= render partial: "users/shared/world" %>
          <%= render partial: "users/shared/kpis" %>

        </div>
      </div>  


    </div>
  </div>
</div>
