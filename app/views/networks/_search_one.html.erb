			    <%= f.search_field :company_cont,
			      class: "form-control",
			      placeholder: "Company" %>
	      </div>
				<div>
		    	<%= f.submit "GO!", class: "btn btn-orange18-orange" %>
		    </div>
	<% end %>
</div>