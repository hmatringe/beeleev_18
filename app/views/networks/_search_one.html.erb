<div id="network-search-one">
	<%= search_form_for @q, url: search_one_network_path do |f| %>
	      <div class="form-title">Or Someone in Particular...</div>
		    
				<div class="expadded">
			    <%= f.search_field :full_name_or_unaccented_full_name_cont,
